{
    "include": ["src/**/*"],
    "exclude": ["./node_modules", "**/*.test.*"],
    "compilerOptions": {
      "target": "es5",                         
      "module": "ESNext",                     
       "jsx": "react-jsx",                  
       "declaration": true,
       "declarationDir": "dist/types", 
       "isolatedModules": true,
       "forceConsistentCasingInFileNames": true,               
       "outDir": "dist/types",                       
       "strict": true,                          
       "moduleResolution": "node",  
       "lib": ["dom", "es2022"],    
       "esModuleInterop": true,
       "skipLibCheck": true           
    }
  }